<h3>Sign In</h3>

<%= form_tag "/login" do %>

    <p>
      <%= label_tag "name" %>
      <%= text_field_tag "name" %>
    </p>

    <p>
      <%= label_tag "password" %>
      <%= password_field_tag "password" %>

      <input type="checkbox" id="reveal">
      <label for="reveal">Show Password</label>

      <script type="text/javascript"> 
      $(document).ready(function() {
        $("#reveal").on("change", function(e) {
          if(this.checked) {
            $("#password").attr("type","text");
          } else {
            $("#password").attr("type","password");
          }
        })
      })
        </script>
    </p>

    <p>
        <%= submit_tag "Let Me In", class: 'btn btn-success' %>

        or

        <%= link_to "Cancel", "/" %>
    </p>

<% end %>