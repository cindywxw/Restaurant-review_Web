<h3>Sign In</h3>

<%= form_tag "/login" do %>

    <p>
      <%= label_tag "name" %>
      <%= text_field_tag "name" %>
    </p>

    <p>
      <%= label_tag "password" %>
      <%= text_field_tag "password" %>
    </p>

    <p>
        <%= submit_tag "Let Me In", class: 'button' %>

        or

        <%= link_to "Cancel", "/" %>
    </p>

<% end %>