<h3>Add a Restaurant</h3>

<%= form_tag "/restaurants" do %>

  <p>
    <%= label_tag "Name" %>
    <%= text_field_tag "name" %>
  </p>

  <p>
    <%= label_tag "Address" %>
    <%= text_field_tag "address" %>
  </p>

  <p>
    <%= label_tag "Number of Table" %>
    <%= text_field_tag "table_number" %>
  </p>


  <p>
      <%= submit_tag "Create Record", class: 'button' %>

      or

      <%= link_to "Cancel", "/restaurants" %>
  </p>

<% end %>
