<h3>Edit Restaurant Info</h3>

<%= form_tag "/restaurants/#{@rest.id}", method: 'patch' do %>


  <p>
    <%= label_tag "Name" %>
    <%= text_field_tag "name", @rest.name %>
  </p>

  <p>
    <%= label_tag "Address" %>
    <%= text_field_tag "address", @rest.address %>
  </p>

  <p>
    <%= label_tag "Number of Table" %>
    <%= select_tag "table_number", options_for_select((1..10).map {|i| [i,i] }, @rest.table_number) %>
  </p>


  <p>
      <%= submit_tag "Save Changes", class: 'button' %>

      or

      <%= link_to "Cancel", "/restaurants" %>
  </p>

<% end %>
