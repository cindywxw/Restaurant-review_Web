<h2>Sign Up</h2>


<%= form_tag "/users" do %>

  <p>
    <%= label_tag "name" %>
    <%= text_field_tag "name", @user.name %>
  </p>

  <p>
    <%= label_tag "password" %>
    <%= password_field_tag "password", @user.password %>

    <input type="checkbox" id="reveal">
      <label for="reveal">Show Password</label>

      <script type="text/javascript"> 
      $(document).ready(function() {
        $("#reveal").on("change", function(e) {
          if(this.checked) {
            $("#password").attr("type","text");
          } else {
            $("#password").attr("type","password");
          }
        })
      })
        </script>
  </p>

  <p>
    <%= label_tag "email" %>
    <%= text_field_tag "email", @user.email %>
  </p>


<!--   <p>
    <%= label_tag "confirm password" %>
    <%= text_field_tag "password" %>
  </p> -->

  <p>
      <%= submit_tag "Sign Me Up", class: 'btn btn-success' %>

      or

      <%= link_to "Cancel", "/" %>
  </p>

<% end %>
