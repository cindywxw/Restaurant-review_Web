<h3>Edit User Info</h3>

<%= form_tag "/users/#{@user.id}", method: 'patch' do %>


<p>
  <%= label_tag "Name" %>
  <%= text_field_tag "name", @user.name %>
</p>

<p>
  <%= label_tag "Current password" %>
  <%= password_field_tag "password" %>

  <input type="checkbox" id="reveal">
  <label for="reveal">Show Password</label>

  <script type="text/javascript"> 
    $(document).ready(function() {
      $("#reveal").on("change", function(e) {
        if(this.checked) {
          $("#password").attr("type","text");
        } else {
          $("#password").attr("type","password");
        }
      })
    })
  </script>
</p>

<p>
  <%= label_tag "Email" %>
  <%= text_field_tag "email", @user.email %>
</p>


<p>
  <%= label_tag "New password" %>
  <%= password_field_tag "changed_pswd" %>

  <input type="checkbox" id="reveal">
  <label for="reveal">Show Password</label>

  <script type="text/javascript"> 
    $(document).ready(function() {
      $("#reveal").on("change", function(e) {
        if(this.checked) {
          $("#changed_pswd").attr("type","text");
        } else {
          $("#changed_pswd").attr("type","changed_pswd");
        }
      })
    })
  </script>
</p>

<p>
  <%= submit_tag "Save Changes", class: 'btn btn-success' %>

  or

  <%= link_to "Cancel", "/users/#{@user.id}" %>
</p>

<% end %>
